{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "eule",
  "scopeName": "source.eule",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.eule",
          "match": "#.*$"
        },
        {
          "name": "comment.block.eule",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.eule",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.eule",
          "match": "\\b\\d+(?:_\\d+)*(?:\\.\\d+(?:_\\d+)*)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.eule",
          "match": "\\b(if|unless|else|while|until|do|for|foreach|in|switch|case|default|break|continue|return|then|try)\\b"
        },
        {
          "name": "keyword.operator.eule",
          "match": "\\b(let|def|typeof|and|or|not)\\b"
        },
        {
          "name": "constant.language.eule",
          "match": "\\b(false|true|nil)\\b"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "meta.function.call.eule",
          "begin": "([a-zA-Z_][a-zA-Z0-9_]*)(\\()",
          "end": "\\)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.eule"
            },
            "2": {
              "name": "punctuation.parenthesis.begin.eule"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.parenthesis.end.eule"
            }
          },
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.eule",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.arithmetic.compound.eule",
          "match": "[+\\-*/%]="
        },
        {
          "name": "keyword.operator.comparison.eule",
          "match": "[=!<>]=|==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.eule",
          "match": "="
        },
        {
          "name": "keyword.operator.increment-decrement.eule",
          "match": "\\+\\+|\\-\\-"
        },
        {
          "name": "keyword.operator.logical.eule",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.eule",
          "match": "&|\\||\\^|~"
        },
        {
          "name": "keyword.operator.spread.eule",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.ternary.eule",
          "match": "[?:]"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.eule",
          "match": ";"
        },
        {
          "name": "punctuation.comma.eule",
          "match": ","
        },
        {
          "name": "punctuation.accessor.eule",
          "match": "\\."
        },
        {
          "name": "punctuation.parenthesis.begin.eule",
          "match": "\\("
        },
        {
          "name": "punctuation.parenthesis.end.eule",
          "match": "\\)"
        },
        {
          "name": "punctuation.brace.begin.eule",
          "match": "\\{"
        },
        {
          "name": "punctuation.brace.end.eule",
          "match": "\\}"
        },
        {
          "name": "punctuation.squarebracket.begin.eule",
          "match": "\\["
        },
        {
          "name": "punctuation.squarebracket.end.eule",
          "match": "\\]"
        }
      ]
    }
  }
}
